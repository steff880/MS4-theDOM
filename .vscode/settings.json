{
   "python.linting.pylintEnabled": true,
   "python.linting.enabled": true,
   "python.linting.pycodestyleEnabled": false,
   "python.linting.flake8Enabled": true,
   "python.terminal.activateEnvironment": false,
   "python.formatting.autopep8Path": "/home/gitpod/.pyenv/shims/autopep8",
   "python.linting.flake8Path": "/home/gitpod/.pyenv/shims/flake8",
   "cornflakes.linter.executablePath": "/home/gitpod/.pyenv/shims/flake8",
   "files.exclude": {
      "**/.DS_Store": true,
      "**/.git": true,
      "**/.github": true,
      "**/.gitp*": true,
      "**/.hg": true,
      "**/.svn": true,
      "**/.vscode": true,
      "**/core.Microsoft*": true,
      "**/core.mongo*": true,
      "**/core.python*": true,
      "**/CVS": true,
      "**/.pyc": true,
      "**/__pycache__": true,
      ".pytest_cache": true,
      "**/.pyi": true
   },
   "python.linting.pylintArgs": [
      "--load-plugins=pylint_django",
      "--load-plugins=pylint_django.checkers.migrations",
      "--disable=no-member",
      "--django-settings-module=the_dom.settings",
      "--disable=C0114, C0115, W0222",
      "--disable=imported-auth-user",
      "--disable=invalid-name",
      "--disable=too-many-ancestors",
  ],
  "python.linting.ignorePatterns": [
   "**/site-packages/**/*.py",
   "**/migrations/**"
  ],
   "files.autoSave": "onFocusChange",
   "workbench.colorTheme": "Visual Studio Dark",
   "terminal.integrated.gpuAcceleration": "canvas",
   "editor.defaultFormatter": "HookyQR.beautify"
}
